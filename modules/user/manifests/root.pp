class user::root {

    define root_attune { 
        file { $name:
            ensure  => present,
            source  => "puppet:///modules/user${name}",
            owner   => "root",
            group   => "root",
            recurse => true,
        }
    }

    ssh_authorized_key { "root_key":
        key    => "",
        type   => "ssh-rsa",
        user   => "root",
    }

    root_attune { [ "/root/.vimrc", "/root/.bashrc", "/root/.vim", "/root/.tmux.conf", ]: }
}
